<%= stylesheet_link_tag "create", media: "all", "data-turbolinks-track" => true %>
<div class="container" id="wrap">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

          <h4>Student Information</h4>
          <div class="row">
            <div class="col-xs-6 col-md-6">
              <%= @student.first_name %>

            </div>
            <div class="col-xs-6 col-md-6">
              <%= @student.last_name %>
            </div>
          </div>

      <%= image_tag(@student.avatar.thumb.url) if @student.avatar %>
      <%= @student.sex %>
      <%= @student.phone %>
      <%= @student.email %>
      <%= @student.joined_date %>

      </div>
</div>
</div>
